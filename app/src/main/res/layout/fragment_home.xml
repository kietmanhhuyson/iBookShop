<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.mainPageFragment">>


    <RelativeLayout
        android:id="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="41dp"
            android:src="@drawable/search"
            android:background="@drawable/bogocsearch"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="380dp"
            android:layout_height="41dp"
            android:layout_marginStart="79dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp"
            android:id="@+id/name"
            android:hint="Search"
            android:background="#D5EFF1"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="41dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/microphone"
            android:background="@drawable/rounded_view"
            android:layout_alignParentRight="true"

            android:layout_marginEnd="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sách thịnh hành"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bacham"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rcv_category1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/danhgia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bogoc"
        android:layout_below="@+id/rcv_category1"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line1"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/alata_bold"
            android:text="Lịch sử đọc sách gần đây"
            android:textSize="18dp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bacham"
            android:background="#D0E9EE"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="35dp"/>
        <RelativeLayout
            android:layout_width="381dp"
            android:layout_height="90dp"
            android:layout_marginTop="85dp"
            android:background="#FBF1F1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <ImageView
                android:id="@+id/dg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bookdg"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I HAVE A GREAT FUTURE"
                android:textSize="12dp"
                android:fontFamily="@font/alata_bold"
                android:layout_marginTop="12dp"
                android:layout_marginStart="85dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OMOLAYO AWOJOBI"
                android:textSize="11dp"
                android:fontFamily="@font/alata"
                android:layout_marginTop="30dp"
                android:layout_marginStart="85dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dg"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mdi_star1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mdi_star1"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mdi_star1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mdi_star1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mdi_star5" /></LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@drawable/bogoc"
        android:backgroundTint="#F4E3E3"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginLeft="40dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#F4E3E3"
                android:src="@drawable/khamphapng" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fontFamily=""
                android:text="Khám phá"
                android:textSize="13dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sct"
                android:background="#F4E3E3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sách của tôi"
                android:textSize="13dp"
                android:fontFamily="@font/alata" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginRight="40dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/danhdau"
                android:layout_alignParentBottom="true"
                android:background="#F4E3E3"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh dấu"
                android:textSize="13dp"
                android:fontFamily="@font/alata" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>